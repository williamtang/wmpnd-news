<!--index.wxml-->
<view class="news-wrapper">
  <view class="tabbar-wrapper">
    <view data-current="0" bindtap='changeTabBar' class="tabbar-cell {{currentTab==0?'on':''}}">国内</view>
    <view data-current="1" bindtap='changeTabBar' class="tabbar-cell {{currentTab==1?'on':''}}">国际</view>
    <view data-current="2" bindtap='changeTabBar' class="tabbar-cell {{currentTab==2?'on':''}}">财经</view>
    <view data-current="3" bindtap='changeTabBar' class="tabbar-cell {{currentTab==3?'on':''}}">娱乐</view>
    <view data-current="4" bindtap='changeTabBar' class="tabbar-cell {{currentTab==4?'on':''}}">军事</view>
    <view data-current="5" bindtap='changeTabBar' class="tabbar-cell {{currentTab==5?'on':''}}">体育</view>
    <view data-current="6" bindtap='changeTabBar' class="tabbar-cell {{currentTab==6?'on':''}}">其他</view>
  </view>
  <view class="graph-summary">
    <image class="bg-news" src="{{firstImage}}"></image>
  </view>
  <view class="news-item" wx:for="{{newsItems}}">
    <view class="text-wrapper" data-newsId="{{item.id}}" bindtap='onTapDetailContent'>
      <view class="news-title">{{item.title}}</view> 
      <!-- <navigator url="/pages/detail/detail" hover-class="navigator-hover">{{item.title}}</navigator> -->
      <view class="news-source">{{item.source}}</view>
      <view class="news-date">{{item.date}}</view>
    </view>
    <image class="news-pic" src="{{item.picPath}}"></image>
  </view>
</view>
